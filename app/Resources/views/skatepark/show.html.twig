{% extends 'base.html.twig' %}

{% block body %}
<div class="web-down">
    
    <div class="row">
        <a href="http://maps.google.com/?q={{ skatepark.location }},{{ skatepark.streetName }}" class="col-sm-6 leftspad">
            <div onclick="location.href="http//:maps.google.com"  ;" id="hippeDiv" class="panel panel-default ">
              <div class="panel-body" id="alleen">
                <div class="row">
                    <center>
                        <p>BEKIJKEN OP MAPS</p>
                    </center>
                </div>
              </div>
            </div>
        </a>
        <div class="col-sm-6 rightpad">
            <div id="hippeDiv" class="panel panel-default">
              <div class="panel-body" id="alleen">
                <div class="row">
                    <center>
                        <p>DELEN MET VRIENDEN</p>
                    </center>
                </div>
              </div>
            </div>
        </div>
    </div>
    <div id="hippeDiv" class="panel panel-default">
      <div class="panel-body" id="alleen">
          <h1>{{ skatepark.name }} <small>{% for i in 1..5 %}<i class="fa fa-star{{ skatepark.rating>=i?'':'-o' }}"></i>{% endfor %}</small></h1>
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ skatepark.id }}</td>
                </tr>
                <tr>
                    <th>Location</th>
                    <td>{{ skatepark.location }}</td>
                </tr>
                <tr>
                    <th>Streetname</th>
                    <td>{{ skatepark.streetName }}</td>
                </tr>
                <tr>
                    <th>Rating</th>
                    <td>{% for i in 1..5 %}<i class="fa fa-star{{ skatepark.rating>=i?'':'-o' }}"></i>{% endfor %}</td>
                </tr>
                <tr>
                    <th>Facilities</th>
                    <td>{% if skatepark.facilities %}{{ skatepark.facilities|join(', ') }}{% endif %}</td>
                </tr>
            </tbody>
        </table>
      </div>
    </div>
    <div class="row">
        <a class="col-sm-6 leftspad">
            <img class="full" src="{{ skatepark.image|raw }}" />
        </a>
        <a class="col-sm-6 rightpad">
            <img class="full" src="https://maps.googleapis.com/maps/api/staticmap?size=600x400&center={{ skatepark.location }},{{ skatepark.streetName }}&markers={{ skatepark.location }},{{ skatepark.streetName }}">
        </a>
    </div>
        

    
            <a class="btn btn-primary" href="{{ path('skatepark_index') }}">Back to list</a> 
            <a class="btn btn-primary" href="{{ path('skatepark_edit', { 'id': skatepark.id }) }}">Edit</a> 
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        
    </div></div>
{% endblock %}
